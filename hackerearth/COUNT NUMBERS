#include<iostream>
using namespace std;
int main()
{
    int t,n,i,g,c=0;
    string a;
    cin>>t;
    while(t--)
    {
            cin>>n;
            cin>>a;
            int f=0;
                c=0;
                g=0;
           for(i=0;i<n;i++)
        {
            if(a[i]>='0'&&a[i]<='9')
            {
                g++;
            }
            else
            {
              if(g!=0)
               c++;
               g=0;
            }
    
        }
        if(a[n-1]>='0'&&a[n-1]<='9')
        f++;
       
        cout<<c+f<<endl;
    }
}
